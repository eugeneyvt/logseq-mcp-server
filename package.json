{
  "name": "logseq-mcp-server",
  "version": "1.0.0-beta.7",
  "description": "Logseq Model Context Protocol server - enables AI assistants to seamlessly interact with your Logseq knowledge base",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "logseq-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest tests/unit",
    "test:e2e": "node tests/e2e/test-e2e-comprehensive.js",
    "test:e2e-integration": "node tests/e2e/run-e2e-tests.js",
    "test:all": "node tests/run-all-tests.js",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "ci": "npm run type-check && npm run lint && npm run build"
  },
  "keywords": [
    "logseq",
    "mcp",
    "model-context-protocol",
    "ai",
    "knowledge-base",
    "claude",
    "anthropic",
    "notes",
    "productivity",
    "automation",
    "graph",
    "personal-knowledge-management",
    "pkm"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eugeneyvt/logseq-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/eugeneyvt/logseq-mcp-server/issues"
  },
  "homepage": "https://github.com/eugeneyvt/logseq-mcp-server#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs/*.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "axios": "^1.6.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "jsdom": "^26.1.0",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-gfm-strikethrough": "^2.0.0",
    "mdast-util-gfm-table": "^2.0.0",
    "mdast-util-gfm-task-list-item": "^2.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "pino": "^8.17.2",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-wiki-link": "^2.0.1",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.2.0"
  }
}
