{
  "name": "logseq-mcp-server",
  "version": "1.0.1",
  "description": "Model Context Protocol server for Logseq - enables AI assistants to interact with your Logseq knowledge base",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "logseq-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ci": "vitest --run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "ci": "npm run type-check && npm run lint && npm run test:ci && npm run build"
  },
  "keywords": [
    "logseq",
    "mcp",
    "model-context-protocol",
    "ai",
    "knowledge-base",
    "claude",
    "anthropic"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/logseq-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/yourusername/logseq-mcp-server/issues"
  },
  "homepage": "https://github.com/yourusername/logseq-mcp-server#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "pino": "^8.17.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.2.0"
  }
}
